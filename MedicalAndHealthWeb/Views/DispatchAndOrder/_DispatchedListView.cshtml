 @using MHData.Entity;
 
@model IEnumerable<DispatchDesireInfo>

@using GridMvc.Html 

@Html.Grid(Model).Columns(columns =>  
                    {  
                        columns.Add(c => c.DispatchDate).Titled("Dispatch Date").Filterable(true);
                        columns.Add(c => c.DispatchNumber ).Titled("Dispatch Number").Filterable(true);
                        columns.Add(c => c.DispatchTo ).Titled("Dispatch To ").Filterable(true);
                      
                      
                        columns.Add()  
                        .Encoded(false)  
                        .Sanitized(false)  
                        .SetWidth(40)
                        .RenderValueAs(o => @<a  onclick="AddEditDispatchInfo(@o.ID)"> Edit</a>);
                                
                              
                            
                          
                    }).WithPaging(10).Sortable(true)  
